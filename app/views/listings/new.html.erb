<div class="form container col-6" style="margin-top: 100px; margin-bottom: 20px">
  <h1>Add new listing</h1>
  <span class="formtext">
    <%= simple_form_for (@listing) do |f| %>
    <%= f.input :name %>
    <%= f.input :address%>
    <%= f.input :max_cap, :label => "Maximum Occupancy", collection: (1..9) %>
    <%= f.input :description%>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </span>
  <%= f.submit %>
  <% end %>
</div>
